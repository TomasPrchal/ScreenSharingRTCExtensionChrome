{
    "name" : "Screen Capture",
    "author": "Icord",
    "version" : "0.3",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "WebRTC screen capturing extension.",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
       "js": [ "content.js" ],
       "all_frames": true,
       "run_at": "document_start",
       "matches": ["https://*/*"]
    }],
    "icons" : {
        "48" : "icon.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}